<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.o3dr.android.client.test" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.o3dr.android.client.test"
        android:targetPackage="com.o3dr.android.client.test" />

    <application>
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.o3dr.android.client.utils.InstallServiceDialog"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar.MinWidth" />
        <activity
            android:name="com.o3dr.android.client.utils.UpdateServiceDialog"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar.MinWidth" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>